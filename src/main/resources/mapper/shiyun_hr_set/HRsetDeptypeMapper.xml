<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.elex.oa.dao.dao_shiyun.IHRsetDeptypeDao">

	<resultMap id="DeptypeMapper" type="HRsetDeptype">
		<id column="id" property="id" />
		<result column="deptype" property="deptype" />
	</resultMap>

	<insert id="insertOne" parameterType="HRsetDeptype" useGeneratedKeys="true" keyProperty="id">
		insert into tb_hr_set_deptype (
			id,
			deptype)
		values (
			NULL,
			#{deptype})
	</insert>

	<select id="selectAll" resultMap="DeptypeMapper">
		SELECT * FROM tb_hr_set_deptype
		ORDER BY id DESC
	</select>

	<select id="selectByConditions" parameterType="HRsetDeptype" resultMap="DeptypeMapper">
		SELECT * FROM tb_hr_set_deptype
		<where>
			<if test="id!=null and id!=''">AND id=#{id}</if>
			<if test="deptype!=null and deptype!=''">AND deptype=#{deptype}</if>
		</where>
	</select>

	<delete id="deleteOne" parameterType="java.lang.Integer">
		DELETE FROM tb_hr_set_deptype WHERE id=#{id}
	</delete>

	<update id="updateOne" parameterType="HRsetDeptype">
		UPDATE tb_hr_set_deptype
		SET deptype=#{deptype}
		WHERE id=#{id}
	</update>
</mapper>
