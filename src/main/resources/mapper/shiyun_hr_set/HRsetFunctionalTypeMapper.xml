<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.elex.oa.dao.dao_shiyun.IHRsetFunctionalTypeDao">

	<resultMap id="DepFunctionalTypeMapper" type="HRsetFunctionalType">
		<id column="id" property="id" />
		<result column="functionaltype" property="functionaltype" />
	</resultMap>

	<insert id="insertOne" parameterType="HRsetFunctionalType" useGeneratedKeys="true" keyProperty="id">
		insert into tb_hr_set_functionaltype (
			id,
			functionaltype)
		values (
			NULL,
			#{functionaltype})
	</insert>

	<select id="selectAll" resultMap="DepFunctionalTypeMapper">
		SELECT * FROM tb_hr_set_functionaltype
	</select>

	<select id="selectByConditions" parameterType="HRsetFunctionalType" resultMap="DepFunctionalTypeMapper">
		SELECT * FROM tb_hr_set_functionaltype
		<where>
			<if test="id!=null and id!=''" >AND id=#{id}</if>
			<if test="functionaltype!=null and functionaltype!=''" >AND functionaltype=#{functionaltype}</if>
		</where>
	</select>

	<delete id="deleteOne" parameterType="java.lang.Integer">
		DELETE FROM tb_hr_set_functionaltype WHERE id=#{id}
	</delete>

	<update id="updateOne" parameterType="HRsetFunctionalType">
		UPDATE tb_hr_set_functionaltype
		SET functionaltype=#{functionaltype}
		WHERE id=#{id}
	</update>
</mapper>
