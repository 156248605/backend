<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.elex.oa.dao.dao_shiyun.IHRsetLegalholidayDao">

	<resultMap id="LegalholidayMapper" type="HRsetLegalholiday">
		<id column="id" property="id" />
		<result column="legalholiday" property="legalholiday" />
	</resultMap>

	<insert id="insertOne" parameterType="HRsetLegalholiday" useGeneratedKeys="true" keyProperty="id">
		insert into tb_hr_set_legalholiday (
			id,
			legalholiday)
		values (
			NULL,
			#{legalholiday})
	</insert>

	<select id="selectAll" resultMap="LegalholidayMapper">
		SELECT * FROM tb_hr_set_legalholiday
		ORDER BY id DESC
	</select>

	<select id="selectByConditions" parameterType="HRsetLegalholiday" resultMap="LegalholidayMapper">
		SELECT * FROM tb_hr_set_legalholiday
		<where>
			<if test="id!=null and id!=''">AND id=#{id}</if>
			<if test="legalholiday!=null and legalholiday!=''">AND legalholiday=#{legalholiday}</if>
		</where>
	</select>

	<delete id="deleteOne" parameterType="java.lang.Integer">
		DELETE FROM tb_hr_set_legalholiday WHERE id=#{id}
	</delete>

	<update id="updateOne" parameterType="HRsetLegalholiday">
		UPDATE tb_hr_set_legalholiday
		SET legalholiday=#{legalholiday}
		WHERE id=#{id}
	</update>

</mapper>
