<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.elex.oa.dao.ISysDicDao">
    <resultMap id="BaseResultMap" type="SysDic">
        <id column="DIC_ID_" property="dicId" />
        <result column="KEY_" property="key" />
        <result column="NAME_" property="name" />
        <result column="VALUE_" property="value" />
        <result column="DESCP_" property="descp" />
        <result column="SN_" property="sn" />
        <result column="PATH_" property="path" />
        <result column="TYPE_ID_" property="typeId" />
        <result column="PARENT_ID_" property="parentId" />
        <!--多对一-->
        <association property="sysTree" column="TYPE_ID_"
                     select="com.elex.oa.dao.ISysTreeDao.getTreeById"/>

    </resultMap>

    <sql id="Base_Column_List" >DIC_ID_,KEY_,NAME_,VALUE_,DESCP_,SN_,PATH_,PARENT_ID_,TYPE_ID_</sql>

    <select id="getByTreeId" resultMap="BaseResultMap" parameterType="java.lang.String">
        	SELECT
			<include refid="Base_Column_List"/>
		  FROM
			 sys_dic
          WHERE
           TYPE_ID_ =#{id}
    </select>

</mapper>