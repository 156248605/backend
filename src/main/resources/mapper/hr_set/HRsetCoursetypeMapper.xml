<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.elex.oa.dao.hr.IHRsetCoursetypeDao">

	<resultMap id="CoursetypeMapper" type="HRsetCoursetype">
		<id column="id" property="id" />
		<result column="coursetype" property="coursetype" />
	</resultMap>

	<insert id="insertOne" parameterType="HRsetCoursetype" useGeneratedKeys="true" keyProperty="id">
		insert into tb_hr_set_coursetype (
			id,
			coursetype)
		values (
			NULL,
			#{coursetype})
	</insert>

	<select id="selectAll" resultMap="CoursetypeMapper">
		SELECT * FROM tb_hr_set_coursetype
		ORDER BY id DESC
	</select>

	<select id="selectByConditions" parameterType="HRsetCoursetype" resultMap="CoursetypeMapper">
		SELECT * FROM tb_hr_set_coursetype
		<where>
			<if test="id!=null and id!=''">AND id=#{id}</if>
			<if test="coursetype!=null and coursetype!=''">AND coursetype=#{coursetype}</if>
		</where>
	</select>

	<delete id="deleteOne" parameterType="java.lang.Integer">
		DELETE FROM tb_hr_set_coursetype WHERE id=#{id}
	</delete>

	<update id="updateOne" parameterType="HRsetCoursetype">
		UPDATE tb_hr_set_coursetype
		SET coursetype=#{coursetype}
		WHERE id=#{id}
	</update>

</mapper>
