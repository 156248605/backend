<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.elex.oa.dao.hr_shiyun.IHRsetRaceDao">

	<resultMap id="RaceMapper" type="HRsetRace">
		<id column="id" property="id" />
		<result column="race" property="race" />
	</resultMap>

	<insert id="insertOne" parameterType="HRsetRace" useGeneratedKeys="true" keyProperty="id">
		insert into tb_hr_set_race (
			id,
			race)
		values (
			NULL,
			#{race})
	</insert>

	<select id="selectAll" resultMap="RaceMapper">
		SELECT * FROM tb_hr_set_race
		ORDER BY id DESC
	</select>

	<select id="selectByConditions" parameterType="HRsetRace" resultMap="RaceMapper">
		SELECT * FROM tb_hr_set_race
		<where>
			<if test="id!=null and id!=''">AND id=#{id}</if>
			<if test="race!=null and race!=''">AND race=#{race}</if>
		</where>
	</select>

	<delete id="deleteOne" parameterType="java.lang.Integer">
		DELETE FROM tb_hr_set_race WHERE id=#{id}
	</delete>

	<update id="updateOne" parameterType="HRsetFunctionalType">
		UPDATE tb_hr_set_race
		SET race=#{race}
		WHERE id=#{id}
	</update>
</mapper>
